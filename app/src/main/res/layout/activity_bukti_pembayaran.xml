<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bukti_pembayaran"
    android:orientation="vertical"
    android:background="@mipmap/bg_app">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALIDASI PENUMPANG"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Aditya Sofyan Maulana)"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Rek.   : Aditya Sofyan Maulana"
        android:textSize="19sp"
        android:layout_marginLeft="24dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Rek.  : 643987487762019"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto               :"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:textColor="#000"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#fff"
        android:src="@mipmap/struk"
        android:layout_gravity="center"/>


</LinearLayout>