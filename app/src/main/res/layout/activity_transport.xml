<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transport"
    android:orientation="vertical"
    android:background="@mipmap/bg_app">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAFTAR PENUMPANG"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"/>
    <Button
        android:layout_width="285dp"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4/15)"
        android:layout_gravity="center"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:text="Detail penumpang dapat dilihat setelah melakukan proses transaksi."
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textStyle="italic"/>
    <ImageView
        android:id="@+id/nextPembayaran"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:src="@mipmap/cek"
        android:layout_gravity="center"
        android:layout_margin="16dp"/>

</LinearLayout>